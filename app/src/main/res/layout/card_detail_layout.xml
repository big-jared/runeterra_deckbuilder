<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.jguttromson.runterra_deckmaster.Region"/>
        <import type="com.jguttromson.runterra_deckmaster.Type"/>
        <import type="com.jguttromson.runterra_deckmaster.Card"/>
        <import type="com.jguttromson.runterra_deckmaster.FilterType"/>
        <variable
            name="model"
            type="com.jguttromson.runterra_deckmaster.CardViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{model.card.getRegionColor(context)}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardImage"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@color/gray"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="60dp"/>

            <ImageView
                android:id="@+id/cardImageBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:tint="@color/darkerGray"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timesheetMapBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:behavior_hideable="false"
            app:behavior_peekHeight="200dp"
            android:clickable="true"
            android:focusable="true">

            <View
                android:id="@+id/timesheetMapBottomSheetBackground"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bottom_sheet_rounded_top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/topOfBottomSheet" />

            <View
                android:id="@+id/topOfBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="11dp"
                app:layout_constraintBottom_toTopOf="@id/bottomSheetHandle" />

            <View
                android:id="@+id/bottomSheetHandleTarget"
                android:layout_width="80dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toTopOf="@id/mapDetailsLocationLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/bottomSheetHandle"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@id/mapDetailsLocationLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:elevation="16dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mapDetailsLocationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@id/bottomSheetHandleTarget"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/cardTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="@{model.card.name}"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/timesheetLocationScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/cardTitle"
                    android:layout_marginTop="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/cardDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="start"
                            android:text="@{model.card.description}"
                            android:textColor="@color/lighterGray"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/flavorText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="start"
                            android:text="@{model.card.flavorText}"
                            android:textColor="@color/lighterGray"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cardDescription"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/region"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="start"
                            android:text="@{model.card.region.name()}"
                            android:textColor="@{model.card.getRegionColor(context)}"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/flavorText"
                            android:layout_marginTop="8dp"/>

                        <ImageView
                            android:id="@+id/regionIcon"
                            android:layout_width="30dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="@id/region"
                            app:layout_constraintStart_toEndOf="@id/region"
                            app:layout_constraintBottom_toBottomOf="@id/region"
                            android:src="@{model.card.getRegionIcon(context)}" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>